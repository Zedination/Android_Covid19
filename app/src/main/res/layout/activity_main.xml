<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewKhanCap"
        android:layout_width="96dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:text="Gọi khẩn cấp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoiKhanCap" />

    <TextView
        android:id="@+id/textViewCovid19Global"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="100dp"
        android:text="Số liệu thế giới"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewCovid19VN"
        app:layout_constraintTop_toBottomOf="@+id/buttonGlobal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="Cập nhật Covid-19 trong nước"
        android:src="@drawable/baseline_update_white_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCovid19VN"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:text="Số liệu trong nước"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVietNam" />

    <Button
        android:id="@+id/btnVietNam"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/vietnam_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGlobal"
        android:layout_width="69dp"
        android:layout_height="71dp"
        android:layout_marginStart="124dp"
        android:background="@drawable/global"
        app:layout_constraintStart_toEndOf="@+id/btnVietNam"
        app:layout_constraintTop_toTopOf="@+id/btnVietNam" />

    <Button
        android:id="@+id/buttonGoiKhanCap"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/khancap2"
        app:layout_constraintStart_toStartOf="@+id/btnVietNam"
        app:layout_constraintTop_toBottomOf="@+id/textViewCovid19VN" />

    <Button
        android:id="@+id/buttonTintuc"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/tintuc"
        app:layout_constraintStart_toEndOf="@+id/buttonGoiKhanCap"
        app:layout_constraintTop_toTopOf="@+id/buttonGoiKhanCap" />

    <TextView
        android:id="@+id/textViewNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Tin tức Covid-19"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewKhanCap"
        app:layout_constraintTop_toBottomOf="@+id/buttonTintuc" />

    <Button
        android:id="@+id/buttonPhanHoi"
        android:layout_width="71dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/feedback2"
        app:layout_constraintStart_toStartOf="@+id/buttonTintuc"
        app:layout_constraintTop_toBottomOf="@+id/textViewNews" />

    <TextView
        android:id="@+id/textViewFeedback"
        android:layout_width="109dp"
        android:layout_height="17dp"
        android:layout_marginStart="232dp"
        android:text="Tác giả"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPhanHoi" />

    <Button
        android:id="@+id/buttonXemTinDaLuu"
        android:layout_width="74dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bookmarks"
        app:layout_constraintStart_toStartOf="@+id/textViewKhanCap"
        app:layout_constraintTop_toBottomOf="@+id/textViewKhanCap" />

    <TextView
        android:id="@+id/textViewTinDaLuu"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginStart="48dp"
        android:text="Tin đã lưu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonXemTinDaLuu" />

</androidx.constraintlayout.widget.ConstraintLayout>
