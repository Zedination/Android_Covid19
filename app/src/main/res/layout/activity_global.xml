<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalActivity">

    <TextView
        android:id="@+id/textViewNewCasesByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitleByCountry"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAllCasesByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleByCountry" />

    <TextView
        android:id="@+id/textViewAllDiedByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewAllCasesByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllCasesByCountry" />

    <TextView
        android:id="@+id/textViewNewDiedByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNewCasesByCountry"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAllDiedByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewCasesByCountry" />

    <TextView
        android:id="@+id/textViewAllRecoveredByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewAllDiedByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllDiedByCountry" />

    <TextView
        android:id="@+id/textViewNewRecoveredByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNewDiedByCountry"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAllRecoveredByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewDiedByCountry" />

    <TextView
        android:id="@+id/textViewAllCasesByCountry"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleByCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleByCountry" />

    <TextView
        android:id="@+id/textViewAllDied"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewAllCases"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllCases" />

    <TextView
        android:id="@+id/textViewAllRecovered"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewAllDied"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllDied" />

    <TextView
        android:id="@+id/textViewNewCases"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitleGlobal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAllCases"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleGlobal" />

    <TextView
        android:id="@+id/textViewNewDied"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewNewCases"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewCases" />

    <TextView
        android:id="@+id/textViewNewRecovered"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewNewDied"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewDied" />

    <TextView
        android:id="@+id/textViewTitleGlobal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Số liệu Covid-19 toàn Thế Giới"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAllCases"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleGlobal"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleGlobal" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="214dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Search by country"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewAllRecovered"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllRecovered" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/baseline_search_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/editTextSearch"
        app:layout_constraintTop_toTopOf="@+id/editTextSearch" />

    <TextView
        android:id="@+id/textViewTitleByCountry"
        android:layout_width="285dp"
        android:layout_height="39dp"
        android:layout_marginTop="36dp"
        android:text="Số liệu Covid-19 tại"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/editTextSearch"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>